---
interface Props {
  title: string;
  description: string;
  ogTitle?: string;
  ogDescription?: string;
  ogType?: string;
  canonicalUrl: string;
  twitterTitle?: string;
  twitterDescription?: string;
  structuredData?: object;
}

const {
  title,
  description,
  ogTitle,
  ogDescription,
  ogType = 'article',
  canonicalUrl,
  twitterTitle,
  twitterDescription,
  structuredData,
} = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="dark">
    <title>{title}</title>
    <meta name="description" content={description}>

    <!-- Open Graph -->
    <meta property="og:title" content={ogTitle || title}>
    <meta property="og:description" content={ogDescription || description}>
    <meta property="og:type" content={ogType}>
    <meta property="og:url" content={canonicalUrl}>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content={twitterTitle || title}>
    <meta name="twitter:description" content={twitterDescription || description}>

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl}>

    <!-- Structured Data -->
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}

    <!-- Fonts: Personal Mode stack -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@600;700;800&family=IBM+Plex+Sans:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">

    <style is:global>
        /* ═══════════════════════════════════════
           DESIGN TOKENS
           ═══════════════════════════════════════ */
        :root {
            /* Colors */
            --color-volt: #E2FF00;
            --color-signal: #00FF00;
            --color-shift: #FF00FF;
            --color-white: #FFFFFF;
            --color-black: #000000;
            --color-blush: #F5F0EB;

            /* Typography — Personal Mode */
            --font-display: 'Syne', sans-serif;
            --font-body: 'IBM Plex Sans', sans-serif;
            --font-mono: 'IBM Plex Mono', monospace;

            /* Spacing */
            --space-xs: 8px;
            --space-sm: 16px;
            --space-md: 24px;
            --space-lg: 48px;
            --space-xl: 96px;

            /* Animation */
            --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
            --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);

            /* Essay layout — two-zone */
            --essay-container: 1080px;
            --essay-text: 600px;
            --essay-margin: 360px;
            --essay-gap: 60px;
            --bg: #0A0A0A;
            --text-primary: rgba(255, 255, 255, 0.87);
            --text-secondary: rgba(255, 255, 255, 0.55);
            --text-tertiary: rgba(255, 255, 255, 0.30);
            --border-subtle: rgba(255, 255, 255, 0.08);
        }


        /* ═══════════════════════════════════════
           RESET & BASE
           ═══════════════════════════════════════ */
        *, *::before, *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
            -webkit-text-size-adjust: 100%;
        }

        body {
            font-family: var(--font-body);
            font-size: 19px;
            font-weight: 400;
            line-height: 1.75;
            color: var(--text-primary);
            background:
                radial-gradient(ellipse at 10% 90%, rgba(226, 255, 0, 0.025) 0%, transparent 50%),
                radial-gradient(ellipse at 90% 10%, rgba(255, 0, 255, 0.015) 0%, transparent 50%),
                var(--bg);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            text-rendering: optimizeLegibility;
            font-feature-settings: 'kern' 1;
            overflow-x: hidden;
        }

        ::selection {
            background: rgba(226, 255, 0, 0.25);
            color: var(--color-white);
        }

        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.12); border-radius: 3px; }
        ::-webkit-scrollbar-thumb:hover { background: rgba(255, 255, 255, 0.22); }


        /* ═══════════════════════════════════════
           READING PROGRESS BAR
           ═══════════════════════════════════════ */
        .progress-bar {
            position: fixed;
            top: 0;
            left: 0;
            width: 0%;
            height: 2px;
            background: var(--color-volt);
            z-index: 1000;
            transition: width 0.1s linear;
        }


        /* ═══════════════════════════════════════
           TOP BAR (matches front page pattern)
           ═══════════════════════════════════════ */
        .site-top {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: var(--space-md) var(--space-md) 0;
        }

        .site-top__name {
            font-family: var(--font-mono);
            font-size: clamp(11px, 1.2vw, 13px);
            font-weight: 500;
            color: var(--color-volt);
            line-height: 1;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            text-decoration: none;
            transition: opacity 0.3s var(--ease-out-quart);
        }

        .site-top__name:hover {
            opacity: 0.7;
        }

        .site-top__contact {
            font-family: var(--font-mono);
            font-size: clamp(10px, 1vw, 11px);
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            line-height: 1;
            color: var(--color-signal);
            text-decoration: none;
            padding: 6px 12px;
            transition: all 0.3s var(--ease-out-expo);
            white-space: nowrap;
        }

        .site-top__contact:hover {
            color: var(--color-black);
            background: var(--color-signal);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(0, 255, 0, 0.2);
        }


        /* ═══════════════════════════════════════
           ESSAY HEADER
           ═══════════════════════════════════════ */
        .essay-header {
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: var(--space-xl) var(--space-md) var(--space-lg);
        }

        .essay-meta {
            display: flex;
            gap: var(--space-sm);
            align-items: baseline;
            margin-bottom: var(--space-lg);
            font-family: var(--font-mono);
            font-size: 11px;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--color-volt);
        }

        .essay-meta__separator {
            color: var(--text-tertiary);
        }

        .essay-meta__link {
            color: var(--color-volt);
            text-decoration: none;
            transition: opacity 0.3s var(--ease-out-quart);
        }

        .essay-meta__link:hover {
            opacity: 0.7;
        }

        .essay-header h1 {
            font-family: var(--font-display);
            font-size: clamp(38px, 6vw, 72px);
            font-weight: 700;
            line-height: 0.95;
            letter-spacing: -0.02em;
            color: var(--color-white);
            margin-bottom: var(--space-md);
            max-width: 14ch;
        }

        .essay-deck {
            font-family: var(--font-body);
            font-size: clamp(20px, 2.5vw, 26px);
            font-weight: 300;
            line-height: 1.4;
            color: var(--text-secondary);
            max-width: var(--essay-text);
        }


        /* ═══════════════════════════════════════
           ESSAY INTRO (context block)
           ═══════════════════════════════════════ */
        .essay-intro {
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: 0 var(--space-md) var(--space-lg);
        }

        .essay-intro p {
            font-size: 17px;
            font-style: italic;
            line-height: 1.7;
            color: var(--text-secondary);
            margin-bottom: 1.2em;
            max-width: var(--essay-text);
        }

        .essay-intro p:last-child {
            margin-bottom: var(--space-lg);
        }

        .essay-intro a {
            color: var(--color-volt);
            text-decoration: underline;
            text-decoration-color: rgba(226, 255, 0, 0.3);
            text-underline-offset: 3px;
            transition: text-decoration-color 0.3s var(--ease-out-quart);
        }

        .essay-intro a:hover {
            text-decoration-color: var(--color-volt);
        }

        .essay-intro-border {
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: 0 var(--space-md);
        }

        .essay-intro-border hr {
            border: none;
            height: 1px;
            background: var(--border-subtle);
            max-width: var(--essay-text);
        }


        /* ═══════════════════════════════════════
           ESSAY BODY — two-zone layout
           ═══════════════════════════════════════ */
        .essay-body {
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: var(--space-lg) var(--space-md);
            overflow: visible;
        }

        .essay-body p {
            margin-bottom: 1.5em;
            max-width: var(--essay-text);
        }

        .essay-body strong {
            font-weight: 600;
            color: var(--color-white);
        }

        .essay-body em {
            font-style: italic;
        }


        /* ── Headings ── */
        .essay-body h2 {
            font-family: var(--font-display);
            font-size: clamp(24px, 3.5vw, 36px);
            font-weight: 700;
            line-height: 1.1;
            letter-spacing: -0.01em;
            color: var(--color-white);
            margin-top: 3.5em;
            margin-bottom: 1em;
            max-width: var(--essay-text);
            clear: right;
        }

        .essay-body h2:first-child {
            margin-top: 0;
        }


        /* ── Links ── */
        .essay-body a {
            color: var(--color-volt);
            text-decoration: underline;
            text-decoration-color: rgba(226, 255, 0, 0.3);
            text-underline-offset: 3px;
            text-decoration-thickness: 1px;
            transition: text-decoration-color 0.3s var(--ease-out-quart);
        }

        .essay-body a:hover {
            text-decoration-color: var(--color-volt);
        }


        /* ── Blockquotes ── */
        .essay-body blockquote {
            margin: 2em 0;
            padding: var(--space-md) 0 var(--space-md) var(--space-md);
            border-left: 2px solid rgba(226, 255, 0, 0.4);
            max-width: var(--essay-text);
        }

        .essay-body blockquote p {
            font-size: 20px;
            font-style: italic;
            font-weight: 300;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.75);
            margin-bottom: 0;
            max-width: none;
        }

        .essay-body blockquote cite {
            display: block;
            margin-top: 0.8em;
            font-family: var(--font-mono);
            font-size: 12px;
            font-style: normal;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--text-tertiary);
        }

        /* ── Pull-quotes (standalone emphasis) ── */
        .essay-body blockquote.pullquote {
            border-left: none;
            padding-left: 0;
            margin: 3em 0;
        }

        .essay-body blockquote.pullquote p {
            font-family: var(--font-display);
            font-size: clamp(20px, 2.5vw, 24px);
            font-style: normal;
            font-weight: 700;
            line-height: 1.3;
            color: var(--color-white);
        }


        /* ── Lists ── */
        .essay-body ul,
        .essay-body ol {
            max-width: var(--essay-text);
            margin-bottom: 1.5em;
            padding-left: 1.2em;
        }

        .essay-body li {
            margin-bottom: 0.6em;
            padding-left: 0.3em;
        }

        .essay-body li::marker {
            color: var(--text-tertiary);
        }

        .essay-body ol li::marker {
            font-family: var(--font-mono);
            font-size: 14px;
            color: var(--text-tertiary);
        }


        /* ═══════════════════════════════════════
           MARGIN FIGURES — annotation zone
           ═══════════════════════════════════════ */
        .essay-figure {
            float: right;
            clear: right;
            width: var(--essay-margin);
            margin: 0.2em 0 2em var(--essay-gap);
        }

        .essay-figure__image {
            width: 100%;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--border-subtle);
            border-radius: 3px;
            overflow: hidden;
        }

        .essay-figure__image img {
            width: 100%;
            height: auto;
            display: block;
        }

        .essay-figure__placeholder {
            font-family: var(--font-mono);
            font-size: 11px;
            font-weight: 400;
            letter-spacing: 0.03em;
            color: var(--text-tertiary);
            text-align: left;
            padding: var(--space-md);
            line-height: 1.5;
            aspect-ratio: 4 / 5;
            display: flex;
            align-items: center;
        }

        .essay-figure figcaption {
            margin-top: 8px;
            font-family: var(--font-mono);
            font-size: 11px;
            font-weight: 400;
            color: var(--text-tertiary);
            letter-spacing: 0.01em;
            line-height: 1.5;
        }

        /* Wider variant — for landscape/diagram images */
        .essay-figure--wide {
            width: calc(var(--essay-margin) + 60px);
        }

        /* Full-span variant — starts at text edge, ends at margin edge */
        .essay-figure--full {
            float: none;
            clear: both;
            width: 100%;
            margin: 2em 0;
        }

        /* Book cover — shadow instead of border */
        .essay-figure--book .essay-figure__image {
            background: none;
            border: none;
            border-radius: 2px;
            box-shadow:
                0 4px 24px rgba(0, 0, 0, 0.5),
                0 1px 4px rgba(0, 0, 0, 0.3);
        }


        /* ═══════════════════════════════════════
           WORD BREAK — typographic moment
           ═══════════════════════════════════════ */
        .word-break {
            float: none;
            clear: both;
            width: 100%;
            margin: 3em 0;
            padding: 2em 0;
            border-top: 1px solid var(--border-subtle);
            border-bottom: 1px solid var(--border-subtle);
        }

        .word-break__words {
            font-family: var(--font-display);
            font-size: clamp(16px, 4.5vw, 42px);
            font-weight: 700;
            line-height: 1.1;
            letter-spacing: -0.02em;
            color: var(--text-tertiary);
            margin-bottom: 0.15em;
            white-space: nowrap;
        }

        .word-break__word {
            white-space: nowrap;
        }

        .word-break__word--volt .word-break__root { color: var(--color-volt); }
        .word-break__word--signal .word-break__root { color: var(--color-signal); }
        .word-break__word--shift .word-break__root { color: var(--color-shift); }

        .word-break__suffix {
            color: var(--text-tertiary);
        }

        .word-break__dot {
            color: var(--text-tertiary);
            opacity: 0.3;
            margin: 0 0.05em;
        }

        .word-break__etym {
            display: flex;
            gap: var(--space-md);
            font-family: var(--font-mono);
            font-size: 15px;
            font-weight: 400;
            color: var(--text-tertiary);
            letter-spacing: 0.02em;
        }

        .word-break__etym span {
            display: flex;
            gap: 0.4em;
        }

        .word-break__etym em {
            font-style: italic;
            font-family: var(--font-body);
            color: var(--text-secondary);
        }


        /* ═══════════════════════════════════════
           ESSAY SEPARATOR & FOOTER
           ═══════════════════════════════════════ */
        .essay-separator {
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: 0 var(--space-md);
            clear: both;
        }

        .essay-separator hr {
            border: none;
            height: 1px;
            background: var(--border-subtle);
            max-width: var(--essay-text);
        }

        .essay-footer {
            max-width: var(--essay-container);
            margin: 0 auto;
            padding: var(--space-lg) var(--space-md) var(--space-xl);
        }

        .essay-footer p {
            font-size: 16px;
            font-style: italic;
            line-height: 1.65;
            color: var(--text-secondary);
            margin-bottom: 1em;
            max-width: var(--essay-text);
        }

        .essay-footer p:last-child {
            margin-bottom: 0;
        }

        .essay-footer a {
            color: var(--color-volt);
            text-decoration: underline;
            text-decoration-color: rgba(226, 255, 0, 0.3);
            text-underline-offset: 3px;
            transition: text-decoration-color 0.3s var(--ease-out-quart);
        }

        .essay-footer a:hover {
            text-decoration-color: var(--color-volt);
        }


        /* ═══════════════════════════════════════
           IMPRESSUM (matches front page)
           ═══════════════════════════════════════ */
        .impressum {
            padding: var(--space-sm) var(--space-md);
        }

        .impressum-content {
            max-width: 100%;
            display: flex;
            flex-direction: row;
            gap: var(--space-sm);
            justify-content: center;
            flex-wrap: nowrap;
        }

        .impressum-text {
            font-family: var(--font-body);
            font-size: clamp(8px, 0.9vw, 10px);
            color: rgba(255, 255, 255, 0.5);
            line-height: 1.4;
            white-space: nowrap;
        }

        .impressum-text a {
            color: rgba(255, 255, 255, 0.5);
            text-decoration: none;
        }


        /* ═══════════════════════════════════════
           ENTRY ANIMATION
           ═══════════════════════════════════════ */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(12px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .essay-header,
        .essay-intro {
            animation: fadeIn 0.7s var(--ease-out-expo) both;
        }

        .essay-intro {
            animation-delay: 0.15s;
        }

        .essay-body {
            animation: fadeIn 0.7s var(--ease-out-expo) both;
            animation-delay: 0.25s;
        }


        /* ═══════════════════════════════════════
           RESPONSIVE — collapse to single column
           ═══════════════════════════════════════ */
        @media (max-width: 1080px) {
            :root {
                --essay-container: 680px;
                --essay-text: 680px;
                --essay-margin: 200px;
                --essay-gap: 2em;
            }

            .essay-figure {
                width: var(--essay-margin);
            }

            .essay-figure--wide {
                width: var(--essay-margin);
            }

            .impressum-content {
                flex-direction: column;
                gap: 2px;
            }
        }

        @media (max-width: 768px) {
            body {
                font-size: 17px;
                line-height: 1.7;
            }

            :root {
                --essay-margin: 160px;
                --essay-gap: 1.5em;
            }

            .essay-header {
                padding-top: var(--space-lg);
            }

            .site-top {
                padding: var(--space-sm) var(--space-sm) 0;
            }

            .essay-body blockquote {
                padding-left: var(--space-sm);
            }

            .essay-body blockquote p {
                font-size: 18px;
            }

            .essay-body blockquote.pullquote p {
                font-size: 20px;
            }
        }

        @media (max-width: 540px) {
            :root {
                --essay-margin: 130px;
                --essay-gap: 1.2em;
            }

            .essay-figure {
                float: none;
                clear: both;
                width: calc(100% + var(--space-md) * 2);
                margin-left: calc(-1 * var(--space-md));
                margin-right: 0;
                margin-top: 1.5em;
                margin-bottom: 1.5em;
            }

            .essay-figure figcaption {
                font-size: 10px;
                padding: 0 var(--space-md);
            }

            .word-break__etym {
                font-size: 12px;
            }
        }


        /* ═══════════════════════════════════════
           PRINT
           ═══════════════════════════════════════ */
        @media print {
            body {
                background: white;
                color: black;
            }

            .progress-bar,
            .site-top,
            .impressum {
                display: none;
            }

            .essay-body a {
                color: black;
                text-decoration: underline;
            }

            .essay-body a::after {
                content: " (" attr(href) ")";
                font-size: 0.8em;
                color: #666;
            }
        }


        /* ═══════════════════════════════════════
           ACCESSIBILITY
           ═══════════════════════════════════════ */
        @media (prefers-reduced-motion: reduce) {
            *, *::before, *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }

            html {
                scroll-behavior: auto;
            }
        }
    </style>
</head>

<body>
    <!-- Reading progress -->
    <div class="progress-bar" aria-hidden="true"></div>

    <!-- Top bar (matches front page pattern) -->
    <nav class="site-top">
        <a href="/" class="site-top__name">Igor Schwarzmann</a>
        <a href="mailto:hello@igorschwarzmann.com" class="site-top__contact">contact me</a>
    </nav>

    <slot />

    <!-- Impressum (matches front page) -->
    <footer class="impressum">
        <div class="impressum-content">
            <p class="impressum-text">Known Unknowns GmbH &middot; Fregestr. 65 &middot; 12159 Berlin</p>
            <p class="impressum-text">Gesch&auml;ftsf&uuml;hrer: Igor Schwarzmann &middot; Amtsgericht Charlottenburg &middot; <a href="mailto:hello@igorschwarzmann.com">hello@igorschwarzmann.com</a></p>
        </div>
    </footer>

    <script>
        // Reading progress bar
        const progressBar = document.querySelector('.progress-bar');
        let ticking = false;

        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(() => {
                    const scrollTop = window.scrollY;
                    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
                    progressBar.style.width = docHeight > 0
                        ? (scrollTop / docHeight) * 100 + '%'
                        : '0%';
                    ticking = false;
                });
                ticking = true;
            }
        });
    </script>
</body>
</html>
